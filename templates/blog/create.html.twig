	{# ******************************************************************************************** #}
	{# ******************************* 3ème FORMULAIRE ******************************************** #}
	{# ******************************************************************************************** #}


		<h1 class="text-center mt-3"> {% if editMode %}
			Modification de l'article
		{% else %}
			Ajouter un article
		{% endif %}
	</h1>

	<!-- Card -->
	<div
		class="card mt-4">

		<!-- Card body -->
		<div class="card-body">

			<p class="h4 text-center py-4">
				{% if editMode %}
					Vous pouvez remplir le formulaire afin de modifier cet article
				{% else %}
					Vous pouvez remplir le formulaire afin d'ajouter un nouvel article
				{% endif %}

			</p>

			{# ----------------------------------------------------------------------------------------------- #}
			{# -------------------------------- Méthode avec form_widget() ----------------------------------- #}

			{# <label for="title" class="font-weight-light">Titre</label>
			{# form_widget() permet d'afficher un champ du formulaire #}
			{# {{ form_widget(formArticle.title) }}
						
									<label for="content" class="font-weight-light">Contenu</label>
									{{ form_widget(formArticle.content) }}
						
									<label for="image" class="font-weight-light">Image</label>
									{{ form_widget(formArticle.image) }} #}

			{# ------------------------- Fin de la Méthode avec form_widget()--------------------------------- #}
			{# ----------------------------------------------------------------------------------------------- #}


			{# ----------------------------------------------------------------------------------------------- #}
			{# --------------------------------- Méthode avec form_row() ------------------------------------- #}

			{{ form_start(formArticle) }}
			{# form_row() permet d'afficher un champ du formulaire et son label #}
			{# formArticle est un objet qui contient les champs du formulaire #}
			{{ form_row(formArticle.title, 
                {
                'label' : "Titre",
                'attr' : 
                        {
                            'placeholder': "Titre"
                        }
                }) 
            }}

			{{ form_row(formArticle.content,
                {
                'label' : "Contenu",
                'attr' : 
                        {
                            'placeholder': "Contenu"
                        }
                }) 
            }}

			{{ form_row(formArticle.image,
                {
                    'attr' : 
                        {
                            'placeholder': "URL de l'image"
                        }
                }) 
            }}


			{# --------------------------- Fin de la Méthode avec form_row()---------------------------------- #}
			{# ----------------------------------------------------------------------------------------------- #}

				<div class="text-center py-4 mt-3"> <button class="btn btn-cyan" type="submit">
					{% if editMode %}
						Enregistrer les modifications
					{% else %}
						Ajouter l'article
					{% endif %}

                    </div>
				</button>
                <div class="text-center">
				<!-- Button -->
				<a href="{{ path('blog')}}" class="btn btn-cyan">Retour</a>
                </div>
			

		</div>
		<!-- Card body -->

	</div>
	<!-- Card -->

	{{ form_end(formArticle) }}

